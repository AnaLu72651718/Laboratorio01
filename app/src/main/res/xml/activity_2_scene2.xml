<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/buttonA1"
            android:layout_width="54dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="48dp"
            motion:layout_constraintStart_toStartOf="parent"/>

        <Constraint
            android:id="@+id/buttonA2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="54dp"
            android:layout_height="64dp"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="98dp" />
        <Constraint
            android:id="@+id/buttonA3"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="54dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="84dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.344" />
        <Constraint
            android:id="@+id/buttonA4"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="54dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="48dp" />
        <Constraint
            android:id="@+id/imageView3"
            android:layout_width="10dp"
            android:layout_height="5dp"
            motion:layout_editor_absoluteY="562dp"
            motion:layout_editor_absoluteX="321dp"
            motion:transitionEasing="linear" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/part1">
        <Constraint
            android:layout_width="54dp"
            android:layout_height="64dp"
            android:id="@+id/buttonA1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="64dp" />

        <Constraint
            android:layout_height="64dp"
            android:layout_width="54dp"
            android:id="@+id/buttonA2"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteX="178dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="132dp" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/part2" >
        <Constraint
            android:layout_height="64dp"
            android:layout_width="54dp"
            android:id="@+id/buttonA4"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="98dp"
            android:layout_marginStart="64dp"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">

    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/part1"
        motion:duration="2000">
        <OnSwipe motion:touchAnchorId="@+id/buttonA1" />
        <KeyFrameSet>
            <KeyPosition
                motion:motionTarget="@+id/buttonA2"
                motion:framePosition="16"
                motion:keyPositionType="pathRelative"
                motion:percentY="-0.104"
                motion:percentX="0.45"
                />
            <KeyPosition
                motion:motionTarget="@+id/buttonA2"
                motion:framePosition="32"
                motion:keyPositionType="pathRelative"
                motion:percentY="0"
                motion:percentX="0.6"
                />
            <KeyPosition
                motion:motionTarget="@+id/buttonA2"
                motion:framePosition="48"
                motion:keyPositionType="pathRelative"
                motion:percentY="0.2"
                />
            <KeyPosition
                motion:motionTarget="@+id/buttonA2"
                motion:framePosition="60"
                motion:keyPositionType="pathRelative"
                motion:percentY="0.04"
                motion:percentX="0.3"
                />
            <KeyPosition
                motion:motionTarget="@+id/buttonA2"
                motion:framePosition="72"
                motion:keyPositionType="pathRelative"
                motion:percentY="-0.1"
                motion:percentX="0.3"
                />
        </KeyFrameSet>
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/part2"
        motion:duration="2000">
        <OnClick motion:targetId="@+id/buttonA4" />
        <KeyFrameSet>
            <KeyTimeCycle
                motion:motionTarget="@+id/buttonA4"
                motion:framePosition="0"
                motion:wavePeriod="1"
                android:scaleX="2"
                android:scaleY="2"
                />
            <KeyTimeCycle
                motion:motionTarget="@+id/buttonA4"
                motion:framePosition="100"
                motion:wavePeriod="0"
                />
        </KeyFrameSet>
    </Transition>






    <Transition
        motion:constraintSetEnd="@+id/MedioA3"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@id/buttonA3"
            motion:touchAnchorSide="right" />
        <OnClick motion:targetId="@id/buttonA3"
            motion:clickAction="toggle" />
    </Transition>




    <ConstraintSet android:id="@+id/MedioA3">
        <Constraint
            android:id="@id/button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
        </Constraint>
        <Constraint
                android:id="@+id/mensaje"
                android:layout_width="54dp"
                android:layout_height="64dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="48dp"
                motion:layout_constraintStart_toStartOf="parent">
    </Constraint>
        <Constraint
            android:layout_height="64dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="380dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.344"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="54dp"
            android:layout_marginStart="84dp"
            android:id="@+id/buttonA3">
        <CustomAttribute
            motion:attributeName="BackgroundColor"
            motion:customColorValue="#FFAB00" />
       </Constraint>
        <Constraint
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteY="268dp"
            motion:layout_editor_absoluteX="132dp" />
    </ConstraintSet>




    <Transition
        motion:constraintSetEnd="@+id/img"
        motion:constraintSetStart="@+id/MedioA3"
        motion:duration="1000"
        motion:motionInterpolator="cubic(0.2,0.2,0.87,0.1)" >

        <OnSwipe
            motion:touchAnchorId="@+id/container"
            motion:touchAnchorSide="top"
            motion:dragDirection="dragUp" />
        <OnClick motion:clickAction="toggle"
            motion:targetId="@id/buttonA3" />
    </Transition>

    <ConstraintSet android:id="@+id/img" >
        <Constraint
            motion:layout_editor_absoluteY="277dp"
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="48dp"
            android:layout_width="wrap_content"
            android:id="@+id/imageView3" />

        <Constraint
            android:id="@+id/container"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">

        </Constraint>
        <Constraint
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_editor_absoluteY="197dp"
            motion:layout_editor_absoluteX="56dp" />
    </ConstraintSet>




</MotionScene>