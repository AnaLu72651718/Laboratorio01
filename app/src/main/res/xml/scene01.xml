<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="5000"
        motion:pathMotionArc="none">
        <OnSwipe
            motion:touchAnchorId="@+id/button"
            motion:touchAnchorSide="right"
            motion:dragDirection="dragRight" />

        <KeyFrameSet>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="0"
                motion:framePosition="0"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startHorizontal"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="0.07"
                motion:percentY="-0.07"
                motion:framePosition="7"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startVertical"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="-0.14"
                motion:framePosition="14"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startHorizontal"/>


            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="-0.21"
                motion:percentY="0"
                motion:framePosition="21"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startVertical"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="0.28"
                motion:framePosition="28"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startHorizontal"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="0.35"
                motion:percentY="0"
                motion:framePosition="35"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startVertical"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="-0.42"
                motion:framePosition="42"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startHorizontal"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="-0.49"
                motion:percentY="0"
                motion:framePosition="49"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startVertical"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="0.56"
                motion:framePosition="56"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startHorizontal"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="0.63"
                motion:percentY="0"
                motion:framePosition="63"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startVertical"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="-0.7"
                motion:framePosition="70"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startHorizontal"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="-0.77"
                motion:percentY="0"
                motion:framePosition="77"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startVertical"/>

            <KeyPosition
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="0.84"
                motion:framePosition="84"
                motion:motionTarget="@id/button"
                motion:pathMotionArc="startHorizontal"/>

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/button"
            android:layout_width="12dp"
            android:layout_height="12dp"
            motion:layout_constraintHeight_percent="0.2"
            motion:layout_constraintWidth_percent="0.65"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="#D81B60"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/button"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="#9999FF"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>